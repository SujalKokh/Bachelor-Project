<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home_student"
    tools:context="np.edu.rms.meritpoints.home_student">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Subject"
                android:layout_column="2"
                android:layout_gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Points"
                android:layout_column="28"
                android:layout_gravity=""/>
        </TableRow>

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="English"
            android:id="@+id/tv_english"
            android:layout_column="2"
            android:fontFamily="serif-monospace"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="39"
            android:id="@+id/token_english"
            android:layout_column="28"
            android:fontFamily="serif-monospace"/>
    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nepali"
                android:id="@+id/tv_nepali"
                android:layout_column="2"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="25"
                android:id="@+id/token_nepali"
                android:layout_column="28"
                android:fontFamily="serif-monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Math"
                android:id="@+id/tv_math"
                android:layout_column="2"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="40"
                android:id="@+id/token_math"
                android:layout_column="28"
                android:fontFamily="serif-monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Science"
                android:id="@+id/tv_science"
                android:layout_column="2"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="40"
                android:id="@+id/token_science"
                android:layout_column="28"
                android:fontFamily="serif-monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Social"
                android:id="@+id/tv_social"
                android:layout_column="2"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="36"
                android:id="@+id/token_social"
                android:layout_column="28"
                android:fontFamily="serif-monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="HPE"
                android:id="@+id/tv_hpe"
                android:layout_column="2"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="33"
                android:id="@+id/token_hpe"
                android:layout_column="28"
                android:fontFamily="serif-monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="OPT Math"
                android:id="@+id/tv_OPTmath"
                android:layout_column="2"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="40"
                android:id="@+id/token_optmath"
                android:layout_column="28"
                android:fontFamily="serif-monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Computer"
                android:id="@+id/tv_computer"
                android:layout_column="2"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="18"
                android:id="@+id/token_computer"
                android:layout_column="28"
                android:fontFamily="serif-monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="OBT"
                android:id="@+id/tv_obt"
                android:layout_column="2"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="50"
                android:id="@+id/token_obt"
                android:layout_column="28"
                android:fontFamily="serif-monospace"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Account"
                android:id="@+id/tv_account"
                android:layout_column="2"
                android:fontFamily="serif-monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="25"
                android:id="@+id/token_account"
                android:layout_column="28"
                android:fontFamily="serif-monospace"/>
        </TableRow>


    </TableLayout>
</RelativeLayout>
